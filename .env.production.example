# Configurações de Produção
# Copie este arquivo para .env.production e preencha com seus dados reais

# Flask
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=GERE_UMA_CHAVE_SECRETA_AQUI

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@host:5432/nome_db

# PagBank (PRODUÇÃO)
# Obtenha seu token em: https://developer.pagbank.com.br
PAGSEGURO_TOKEN=SEU_TOKEN_DE_PRODUCAO_AQUI
PAGSEGURO_SANDBOX=False

# URLs da aplicação
BASE_URL=https://seu-dominio.com.br

# Pagamentos (opcional - se não usar PagBank)
PIX_CHAVE=seu-email@exemplo.com
PIX_NOME_BANCO=Seu Banco
PIX_TIPO_CHAVE=email
